{
  "name": "homebridge-homeassistant-garagedoor",
  "version": "1.0.6",
  "description": "Homebridge plugin to control Home Assistant switches as Garage Doors",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "author": "torresyago",
  "license": "MIT",
  "homepage": "https://github.com/torresyago/homebridge-homeassistant-garagedoor#readme",
  "bugs": {
    "url": "https://github.com/torresyago/homebridge-homeassistant-garagedoor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/torresyago/homebridge-homeassistant-garagedoor.git"
  },
  "engines": {
    "homebridge": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "homebridge": {
    "pluginAlias": "Home Assistant Garage Door",
    "pluginConfigSchema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "required": true,
          "default": "Garage Door"
        },
        "haUrl": {
          "type": "string",
          "title": "Home Assistant URL",
          "required": true,
          "placeholder": "http://192.168.1.100:8123"
        },
        "haToken": {
          "type": "string",
          "title": "HA Long-Lived Access Token",
          "required": true,
          "placeholder": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
        },
        "entityId": {
          "type": "string",
          "title": "Entity ID",
          "required": true,
          "default": "switch.garage_door",
          "placeholder": "switch.Puerta1"
        },
        "pollInterval": {
          "type": "number",
          "title": "Poll Interval (seconds)",
          "required": false,
          "default": 30
        }
      }
    }
  }
}

